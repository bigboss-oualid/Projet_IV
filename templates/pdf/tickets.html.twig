<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=yes, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <div class="row ml-1 mr-1">
        {% for order in orders%}
            {% for visitor in order.visitors %}
                <div class="col-sm-6">
                    <div class="row m-1" style="border: 2px dashed cadetblue;">
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-sm-12 text-center">
                                    <img src="{{ logo }}">
                                </div>
                                <div class="col-sm-12">
                                    <span class="ml-5 float-left  font-weight-bold">
                                        {{ visitor.lastName|capitalize }} {{ visitor.firstName|capitalize}}
                                    </span>
                                    {% if visitor.discount %}
                                        <h6><span class="mr-5 float-right badge badge-pill badge-success small mt-1">Tarif r√©duite </span></h6>
                                    {% endif %}
                                </div>
                                <div class="col-sm-12 mt-2 font-weight-bold">
                                    <span class=" ml-5 float-left font-weight-bold">DOB : <span class="font-weight-light">{{ visitor.birthday|date('d/m/Y') }}</span></span>
                                    <span class="float-right mr-5  font-weight-bolder">DOV : <span class="font-weight-light">{{ order.reservedFor|date('d/m/Y') }}</span></span>
                                </div>
                            </div>
                        </div>
                        <div class="mt-2 mb-1 col-sm-12 text-center">
                            <img class="align-middle" src="data:image/png;base64,{{  visitor.ticketCode|barcode }}">
                            <p class="smaller">{{ visitor.ticketCode }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
    <!-- Footer -->
    <footer>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    </footer>
</body>
